#!/bin/bash
# Pre-commit hook: Check TypeScript and lint before commit

echo "ğŸ” Running pre-commit checks..."

# Run TypeScript check
echo "ğŸ“ Checking TypeScript..."
if ! pnpm exec tsc -b --noEmit; then
  echo "âŒ TypeScript check failed. Please fix the errors before committing."
  exit 1
fi

# Run linter
echo "ğŸ”§ Running linter..."
if ! pnpm lint; then
  echo "âš ï¸  Lint check failed. Please fix the errors before committing."
  exit 1
fi

echo "âœ… All checks passed!"
exit 0
